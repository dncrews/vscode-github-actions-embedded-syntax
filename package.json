{
  "name": "vscode-gha-embedded-syntax",
  "displayName": "GitHub Actions Embedded Syntax",
  "description": "Embedded syntax highlighting for GitHub Actions YAML (actions/github-script and run blocks with shell detection; best with github.vscode-github-actions).",
  "version": "0.0.1",
  "license": "MIT",
  "publisher": "dncrews",
  "engines": {
    "vscode": "^1.85.0"
  },
  "scripts": {
    "test": "node --test"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "github-actions",
    "workflow",
    "yaml",
    "syntax-highlighting",
    "github-script",
    "shell",
    "powershell",
    "bash"
  ],
  "contributes": {
    "grammars": [
      {
        "scopeName": "gha.github-script.injection",
        "path": "./syntaxes/github-actions-github-script.injection.tmLanguage.json",
        "injectTo": [
          "source.yaml",
          "source.yaml.github-actions",
          "source.github-actions",
          "source.github-actions-workflow"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.javascript": "javascript"
        }
      },
      {
        "scopeName": "gha.run-shell.injection",
        "path": "./syntaxes/github-actions-run-shell.injection.tmLanguage.json",
        "injectTo": [
          "source.yaml",
          "source.yaml.github-actions",
          "source.github-actions",
          "source.github-actions-workflow"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.shellscript": "shellscript",
          "meta.embedded.block.powershell": "powershell",
          "meta.embedded.block.bat": "bat",
          "meta.embedded.block.python": "python",
          "meta.embedded.block.javascript": "javascript"
        }
      }
    ]
  }
}
