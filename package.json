{
  "name": "vscode-github-actions-embedded-syntax",
  "displayName": "GitHub Actions Embedded Syntax Highlighting",
  "description": "Embedded syntax highlighting for GitHub Actions YAML (actions/github-script and run blocks with shell detection; best with github.vscode-github-actions).",
  "version": "1.0.0",
  "license": "MIT",
  "publisher": "dncrews",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/dncrews/vscode-github-actions-embedded-syntax.git"
  },
  "homepage": "https://github.com/dncrews/vscode-github-actions-embedded-syntax",
  "bugs": {
    "url": "https://github.com/dncrews/vscode-github-actions-embedded-syntax/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "scripts": {
    "test": "node --test",
    "package": "vsce package",
    "publish:extension": "vsce publish"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.2"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "github-actions",
    "workflow",
    "yaml",
    "syntax-highlighting",
    "github-script",
    "shell",
    "powershell",
    "bash"
  ],
  "contributes": {
    "grammars": [
      {
        "scopeName": "source.yaml.gha.github-script.injection",
        "path": "./syntaxes/github-actions-github-script.injection.tmLanguage.json",
        "injectTo": [
          "source.yaml",
          "source.yaml.github-actions",
          "source.github-actions",
          "source.github-actions-workflow"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.javascript": "javascript"
        }
      },
      {
        "scopeName": "source.yaml.gha.run-shell.injection",
        "path": "./syntaxes/github-actions-run-shell.injection.tmLanguage.json",
        "injectTo": [
          "source.yaml",
          "source.yaml.github-actions",
          "source.github-actions",
          "source.github-actions-workflow"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.shellscript": "shellscript",
          "meta.embedded.block.powershell": "powershell",
          "meta.embedded.block.bat": "bat",
          "meta.embedded.block.python": "python",
          "meta.embedded.block.javascript": "javascript"
        }
      }
    ]
  }
}
