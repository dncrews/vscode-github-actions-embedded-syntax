{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "GitHub Actions github-script injection",
  "scopeName": "source.yaml.gha.github-script.injection",
  "injectionSelector": "L:source.yaml, L:source.yaml.github-actions, L:source.github-actions, L:source.github-actions-workflow - meta.github-actions.github-script.context",
  "patterns": [
    {
      "name": "meta.github-actions.github-script.context",
      "begin": "^(\\s*(?:-\\s+)?)(uses)(\\s*:\\s*)((?:\\\"actions\\/github-script(?:\\@[^\\\"\\s#]+)?\\\"|'actions\\/github-script(?:\\@[^'\\s#]+)?'|actions\\/github-script(?:\\@[^\\s#]+)?))(\\s*(?:#.*)?)$",
      "beginCaptures": {
        "2": {
          "name": "entity.name.tag.yaml"
        },
        "3": {
          "name": "punctuation.separator.key-value.mapping.yaml"
        },
        "4": {
          "name": "string.unquoted.plain.out.yaml"
        }
      },
      "end": "^(?=\\s*-\\s|\\S|\\z)",
      "patterns": [
        {
          "name": "meta.github-actions.github-script.with",
          "begin": "^(\\s+)(with)(\\s*:\\s*)(?:#.*)?$",
          "beginCaptures": {
            "2": {
              "name": "entity.name.tag.yaml"
            },
            "3": {
              "name": "punctuation.separator.key-value.mapping.yaml"
            }
          },
          "end": "^(?!(?:\\1\\s+|\\s*$))",
          "patterns": [
            {
              "contentName": "meta.embedded.block.javascript",
              "begin": "^(\\s+)(script)(\\s*:\\s*)([>|](?:[-+][1-9]?|[1-9][-+]?)?\\s*)(?:#.*)?$",
              "beginCaptures": {
                "2": {
                  "name": "entity.name.tag.yaml"
                },
                "3": {
                  "name": "punctuation.separator.key-value.mapping.yaml"
                },
                "4": {
                  "name": "string.unquoted.block.yaml"
                }
              },
              "end": "^(?!(?:\\1\\s+|\\s*$))",
              "patterns": [
                {
                  "include": "source.js"
                }
              ]
            },
            {
              "include": "#base-fallback"
            }
          ]
        },
        {
          "include": "#base-fallback"
        }
      ]
    }
  ],
  "repository": {
    "base-fallback": {
      "patterns": [
        {
          "include": "source.github-actions-workflow"
        },
        {
          "include": "source.github-actions"
        },
        {
          "include": "source.yaml.github-actions"
        },
        {
          "include": "source.yaml"
        }
      ]
    }
  }
}
