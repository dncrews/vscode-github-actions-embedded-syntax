{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "GitHub Actions run+shell injection",
  "scopeName": "gha.run-shell.injection",
  "injectionSelector": "L:source.yaml, L:source.yaml.github-actions, L:source.github-actions, L:source.github-actions-workflow - meta.github-actions.run-shell.context",
  "patterns": [
    {
      "include": "#shell-bash"
    },
    {
      "include": "#shell-powershell"
    },
    {
      "include": "#shell-cmd"
    },
    {
      "include": "#shell-python"
    },
    {
      "include": "#shell-node"
    }
  ],
  "repository": {
    "base-fallback": {
      "patterns": [
        {
          "include": "source.github-actions-workflow"
        },
        {
          "include": "source.github-actions"
        },
        {
          "include": "source.yaml.github-actions"
        },
        {
          "include": "source.yaml"
        }
      ]
    },
    "shell-bash": {
      "name": "meta.github-actions.run-shell.context",
      "begin": "^(\\s*(?:-\\s+)?)(shell)(\\s*:\\s*)((?:['\\\"])?(?:bash|sh)(?:['\\\"])?)(\\s*(?:#.*)?)$",
      "beginCaptures": {
        "2": {
          "name": "entity.name.tag.yaml"
        },
        "3": {
          "name": "punctuation.separator.key-value.mapping.yaml"
        },
        "4": {
          "name": "string.unquoted.plain.out.yaml"
        }
      },
      "end": "^(?=\\s*-\\s|\\S|\\z)",
      "patterns": [
        {
          "contentName": "meta.embedded.block.shellscript",
          "begin": "^(\\s+)(run)(\\s*:\\s*)([>|][-+0-9\\s]*\\s*)(?:#.*)?$",
          "beginCaptures": {
            "2": {
              "name": "entity.name.tag.yaml"
            },
            "3": {
              "name": "punctuation.separator.key-value.mapping.yaml"
            },
            "4": {
              "name": "string.unquoted.block.yaml"
            }
          },
          "end": "^(?!(?:\\1\\s+|\\s*$))",
          "patterns": [
            {
              "include": "source.shell"
            }
          ]
        },
        {
          "include": "#base-fallback"
        }
      ]
    },
    "shell-powershell": {
      "name": "meta.github-actions.run-shell.context",
      "begin": "^(\\s*(?:-\\s+)?)(shell)(\\s*:\\s*)((?:['\\\"])?(?:pwsh|powershell)(?:['\\\"])?)(\\s*(?:#.*)?)$",
